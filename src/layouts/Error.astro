---
let { error } = Astro.props;
---
<html>
  <head>
    <link rel="shortcut icon" type="image/x-icon" href="/icon.ico">
    <title>vaporvee.com {error}</title>
    <style global>
      body{
        background:black;
        overflow:hidden;
      }
      .error {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: rgb(255, 255, 255);
        font-size: 300%;
        font-family: sans-serif;
      }

      .error-text {
          position: absolute;
          top: 55%;
          left: 50%;
          transform: translate(-50%, -50%);
          color: rgb(255, 255, 255);
          font-family: sans-serif;
          font-size: 200%;
      }
    </style>
  </head>
  <body>
    <img src="/error-bg.gif">
    <h1 class="error">Error: {error}</h1>
    <slot />
  </body>
</html>
